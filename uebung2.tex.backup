\begin{section}{Übung 2}
 \begin{subsection}{Aufgabe 1}
  \begin{enumerate}
   \item $(\{0,1,2,3,4\}, f)$ mit $f(x,y) = (x+y) \text{ mod} 5$ ist eine endliche kommutative Gruppe
   \begin{itemize}
    \item $f: \mathbb{Z}_5 \times \mathbb{Z}_5 \rightarrow \mathbb{Z}_5$ ist total \checkmark
    \item Assoziativität: 
    \begin{align*}
      f(f(a,b),c) & = f((a+b) \text{ mod} 5,c) \\
      & = ((a+b) \text{ mod}5 +c) \text{ mod}5 \\
      & = (a+b+c) \text{ mod}5 = (a+(b+c)\text{ mod}5)\text{ mod}5 \\
      & = f(a,f(b,c))
    \end{align*}
    \item Neutrales Element: $f(x,0) = (x+0)\text{ mod}5 = x$ \\
    $f(0,x) = (0+x)\text{ mod}5 = x$
    \item Inverses Element: Sei $a \in \mathbb{Z}_5$:
    \begin{align*}
      b &= (-a)\text{ mod}5 \\
      &= (a+(-a)\text{ mod}5)\text{ mod}5 \\
      &= 0\text{ mod}5 = 0
    \end{align*}
    Eindeutigkeit: $0\text{ mod}5 =  0$ \checkmark \\
    Angenommen $f(a,b') = 0  = f(a,b)$ mit $b' \in \mathbb{Z}_5$ \\
    $\Rightarrow b' \text{ mod}5 = b\text{ mod}5$\\
    $\Rightarrow b' = b$\\
    $\Rightarrow$ genau ein inverses Element.
    \item Kommutativität: \\
    $f(a,b) = f(b,a) = (a+b)\text{ mod}5 = (b+a)\text{ mod}5 = f(b,a) \checkmark$
   \end{itemize}
    \item $(\mathbb{Z}_6,f,g)$ mit $f(x,y) = (x+y)\text{ mod}6$, $g(x,y) = (x\cdot y)\text{ mod}6$ ist kein Körper: \\
    Damit $(\mathbb{Z}_6),f,g)$ ein Körper ist, muss $(\{1,2,3,4,5\},g)$ kommutative Gruppe sein. \\
    $\Rightarrow \forall$
  \end{enumerate}

 \end{subsection}

\end{section}
